<Window x:Class="ViewModelFirstMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewModelFirstMVVM"
        mc:Ignorable="d"
        Title="ViewModel First MVVM Example" Height="300" Width="800">
    <Window.DataContext>
        <local:ProductViewModel/>
    </Window.DataContext>
    <StackPanel Margin="20">
        <Label Content="Change any value in the Text blocks and click any where outside the text block and the Description will update automatically" />
        <TextBlock Text="Id:"/>
        <TextBox Text="{Binding Id, Mode=TwoWay}"/>
        <TextBlock Text="Name:"/>
        <TextBox Text="{Binding Name, Mode=TwoWay}"/>
        <TextBlock Text="Price:"/>
        <TextBox Text="{Binding Price, Mode=TwoWay}"/>
        <TextBlock Text="{Binding Description}" Margin="0,10,0,0" FontWeight="Bold"/>
    </StackPanel>
</Window>
