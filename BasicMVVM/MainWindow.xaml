<Window x:Class="BasicMVVM.CarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BasicMVVM"
        mc:Ignorable="d"
        Title="Basic MVVM Example: Model to View" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Basic Example of MVVM, here I am fetching the data from Model to ViewModel and from there to this UI" />
            
            <TextBlock Text="Car Information" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="{Binding Car.Make}" />
            <TextBlock Text="{Binding Car.Model}" />
            <TextBlock Text="{Binding Car.Year}" />
        </StackPanel>
        
    </Grid>
</Window>
