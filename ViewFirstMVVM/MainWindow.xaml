<Window x:Class="ViewFirstMVVM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewFirstMVVM"
        mc:Ignorable="d"
        Title="MVVM View-First Example" Height="150" Width="400">

    <StackPanel Orientation="Horizontal" Height="30" >
        <Label Content="Logged in User Name" 
               Grid.Row="0" Grid.Column="0"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               FontWeight="Bold" FontSize="15" Width="200"/>

        <TextBlock Text="{Binding LoggedInUserName}"
                   Grid.Row="0" Grid.Column="1" 
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="15"/>
    </StackPanel>
</Window>
